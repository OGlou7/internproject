<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/myBlue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/switch_mode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tint="@color/toolbar_icon_color"
            android:src="@drawable/ic_round_swap_horiz_24px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/toolbar_icon_color"
            android:text="Switch Mode"/>
    </android.support.v7.widget.Toolbar>


    <fragment android:id="@+id/autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:hint="@string/str_btn_find"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_manouver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/im_manouver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_manouver"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:id="@+id/mapFragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/currentLocationImageButton"
            android:layout_above="@+id/listView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/baseMargin"
            android:layout_marginEnd="@dimen/baseMargin"
            android:src="@android:drawable/ic_menu_mylocation"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:fabSize="normal" />
        <!--android:layout_alignParentBottom="true"-->

        <android.support.v7.widget.RecyclerView
            android:id = "@+id/listView2"
            android:layout_alignBottom="@+id/mapFragment"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:scrollbars = "horizontal" />

        <!--<HorizontalScrollView
            android:id="@+id/hscrollview"
            android:layout_alignBottom="@+id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:divider="@color/quantum_grey200"
                    android:dividerHeight="2dp"
                    android:background="@color/colorWhite" />
            </LinearLayout>
        </HorizontalScrollView>-->
    </RelativeLayout>

</LinearLayout>