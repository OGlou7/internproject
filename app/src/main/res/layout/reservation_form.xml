<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/popup_bg">

    <TextView
        android:id="@+id/autocomplete_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="New Reservation Form"/>

    <ImageButton
        android:id="@+id/ib_cross"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_transparent"
        android:src="@drawable/ic_round_clear_24px"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAddress"
        android:layout_below="@+id/autocomplete_fragment"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Address :" />

        <EditText
            android:id="@+id/et_address"
            android:layout_toEndOf="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Address"
            tools:ignore="Autofill,LabelFor" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCountry"
        android:layout_below="@+id/layoutAddress"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Country :" />

        <EditText
            android:id="@+id/et_country"
            android:layout_toEndOf="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Country name"
            tools:ignore="Autofill,LabelFor" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_below="@+id/layoutCountry"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Start : "
            />

        <TextView
            android:id="@+id/et_startdate"
            android:layout_toEndOf="@+id/tv_startdate"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:textSize="18dp"
            tools:ignore="Autofill"
            />

        <ImageButton
            android:id="@+id/ib_startdate"
            android:layout_toEndOf="@+id/et_startdate"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_24px"
            />
        <TimePicker
            android:id="@+id/starttimepicker"
            android:layout_toEndOf="@+id/ib_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-50dp"
            />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="End   : "
            />

        <TextView
            android:id="@+id/et_enddate"
            android:layout_toEndOf="@+id/tv_enddate"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textSize="18dp"
            tools:ignore="Autofill"
            />

        <ImageButton
            android:id="@+id/ib_enddate"
            android:layout_toEndOf="@+id/et_enddate"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_24px"
            />
        <TimePicker
            android:id="@+id/endtimepicker"
            android:layout_toEndOf="@+id/ib_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-50dp"
            />

    </RelativeLayout>




    <EditText
        android:id="@+id/et_description"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        />


    <Button
        android:id="@+id/b_register"
        android:layout_below="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="#3f76ff"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>