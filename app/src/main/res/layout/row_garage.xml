<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/garage_root_layout">

    <ImageView
        android:id="@+id/iv_row_image_garage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        android:src="@android:drawable/ic_menu_gallery"
        />

    <TextView
        android:id="@+id/tv_row_garage_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myDarkGrey"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_row_image_garage"
        android:layout_alignTop="@+id/iv_row_image_garage"
        android:textStyle="bold"
        android:text="Address"
        android:textSize="@dimen/normalText"
        />

    <CheckBox
        android:id="@+id/cb_row_garage_is_reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_garage_row_more"
        android:checked="true"
        android:layout_margin="@dimen/smallMargin"
        android:buttonTint="@color/myRed"
        />

    <ImageView
        android:id="@+id/iv_garage_row_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:layout_margin="@dimen/smallMargin"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/myDarkGrey"
        />
</RelativeLayout>