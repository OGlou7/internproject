<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/title_new_garage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="New Garage Form"/>

        <ImageButton
            android:id="@+id/ib_cross"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_transparent"
            android:src="@drawable/ic_round_clear_24px"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutAddress"
            android:layout_below="@+id/title_new_garage"
            android:layout_marginTop="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normalText"
                android:text="Address :" />

            <EditText
                android:id="@+id/et_address"
                android:layout_toEndOf="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address"
                tools:ignore="Autofill,LabelFor" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCity"
            android:layout_below="@+id/layoutAddress"
            android:layout_marginTop="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normalText"
                android:text="City :" />

            <EditText
                android:id="@+id/et_city"
                android:layout_toEndOf="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="City Name"
                tools:ignore="Autofill,LabelFor" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCountry"
            android:layout_below="@+id/layoutCity"
            android:layout_marginTop="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normalText"
                android:text="Country :" />

            <EditText
                android:id="@+id/et_country"
                android:layout_toEndOf="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Country name"
                tools:ignore="Autofill,LabelFor" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutPrice"
            android:layout_below="@+id/layoutCountry"
            android:layout_marginTop="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normalText"
                android:text="Price :" />

            <EditText
                android:id="@+id/et_price"
                android:layout_toEndOf="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Price"
                tools:ignore="Autofill,LabelFor" />
        </RelativeLayout>




        <EditText
            android:id="@+id/et_description"
            android:layout_below="@+id/layoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            />


        <Button
            android:id="@+id/b_register"
            android:layout_below="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="#3f76ff"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/baseMargin"
            android:layout_marginRight="@dimen/baseMargin"
            android:layout_marginTop="@dimen/baseMargin"
            android:layout_marginBottom="@dimen/baseMargin"
            />

    </RelativeLayout>
</ScrollView>